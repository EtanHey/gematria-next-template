    "concurrently": "^7.6.0",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "next": "^13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "autoprefixer": "^10.4.14",
    "eslint-config-next": "^13.2.1",
    "jest": "^29.5.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
